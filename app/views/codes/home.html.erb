<div class='container'>
  <div class="page-header">
    <h1>Message Encryption</h1>
  </div>
  <div class="alert alert-danger hide" role="alert"></div>
  <%= form_for(:code, url: encrypt_message_codes_path, method: 'get', remote: true, html: {class: 'form_class'}) do |f|%>
    <div class="form-group">
      <%= f.label 'Message' %>
      <%= f.text_field :message, class: 'form-control', placeholder: 'Message', required: true %>
    </div>
    <div class="form-group">
      <%= f.label 'Keys' %>
      <%= f.number_field :keys, class: 'form-control', placeholder: 'Keys', required: true %>
    </div>
    <%= f.submit 'Encrypt', class: "btn btn-primary" %>
  <% end %>
  <div class='row'>
  </div>
</div>
